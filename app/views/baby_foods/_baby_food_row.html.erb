<tr id="baby_food_<%= baby_food.id %>">
  <td class="col-date">
    <span class="font-semibold text-gray-600">時間：</span>
    <%= baby_food.fed_at.strftime("%H:%M") %>
  </td>

  <td class="col-item1">
    <span class="font-semibold text-gray-600">量：</span>
    <%= baby_food.amount %> ml
  </td>

  <td class="col-memo">
    <% if baby_food.memo.present? %>
      <span class="font-semibold text-gray-600">メモ：</span>
      <%= baby_food.memo %>
    <% end %>
  </td>

  <td class="col-item2">
  </td>

 <td class="record-col-chevron text-right pr-2">
    <%= link_to(
      edit_child_baby_food_path(current_child, baby_food),
      data: { turbo_frame: "modal" },
      class: "record-edit-btn"
    ) do %>
      <i class="fa-solid fa-chevron-right"></i>
    <% end %>
  </td>
</tr>