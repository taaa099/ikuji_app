<% wday = ["日", "月", "火", "水", "木", "金", "土"][date.wday] %>

<div class="date-section">
  <h3 class="date-heading">
    <%= date.strftime("%Y年%m月%d日（#{wday}）") %> の記録
  </h3>

  <%= render partial: "baby_foods/baby_foods_table_or_empty", locals: { baby_foods: baby_foods_by_date.sort_by(&:fed_at).reverse } %>
</div>