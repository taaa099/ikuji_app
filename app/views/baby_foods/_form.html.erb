<div class="form-container">
  <%= form_with(model: [current_child, baby_food], data: { turbo_frame: "modal" }) do |form| %>
    <div class="form-group">
      <%= form.label :fed_at, class: "form-label" do %>
        離乳食の時間
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.datetime_field :fed_at, include_seconds: false, default: baby_food.fed_at || Time.current, class: "form-input #{'input-error' if baby_food.errors[:fed_at].any?}" %>
      <% if baby_food.errors[:fed_at].any? %>
        <div class="error-message">
          <%= baby_food.errors.full_messages_for(:fed_at).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :amount, class: "form-label" do %>
        量(ml)
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.number_field :amount, min: 0, step: 10, class: "form-input #{'input-error' if baby_food.errors[:amount].any?}" %>
      <% if baby_food.errors[:amount].any? %>
        <div class="error-message">
          <%= baby_food.errors.full_messages_for(:amount).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :memo, "メモ", class: "form-label" %>
      <%= form.text_area :memo, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= form.submit baby_food.persisted? ? "更新する" : "登録する" %>
    </div>
  <% end %>
</div>