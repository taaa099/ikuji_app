<div class="form-container">
  <%= form_with(model: [current_child, bottle], data: { turbo_frame: "modal" }) do |form| %>
    <div class="form-group">
      <%= form.label :given_at, class: "form-label" do %>
        ミルクを与えた日時
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.datetime_field :given_at, include_seconds: false, default: bottle.given_at || Time.current, class: "form-input #{'input-error' if bottle.errors[:given_at].any?}"%>
      <% if bottle.errors[:given_at].any? %>
        <div class="error-message">
          <%= bottle.errors.full_messages_for(:given_at).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :amount, class: "form-label" do %>
        量(ml)
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.number_field :amount, min: 0, step: 10, class: "form-input #{'input-error' if bottle.errors[:amount].any?}" %>
      <% if bottle.errors[:amount].any? %>
        <div class="error-message">
          <%= bottle.errors.full_messages_for(:amount).join(", ") %>
        </div>
      <% end %>

    </div>

    <div class="form-group">
      <%= form.label :memo, "メモ", class: "form-label" %>
      <%= form.text_area :memo, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= form.submit bottle.persisted? ? "更新する" : "登録する" %>
    </div>
  <% end %>
</div>