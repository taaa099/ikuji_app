<h1 class="child-title">子供一覧</h1>

<div class="children-list">
  <% @children.each do |child| %>
    <div class="child-card">
      <div class="child-info">
        <p class="child-name"><%= child.name %></p>
        <p class="child-detail">
          <span>誕生日：</span><%= child.birth_date %><br>
          <span>年齢：</span><%= age_in_years(child.birth_date) %>
        </p>
      </div>

      <div class="child-actions">
        <%= link_to '表示', child_path(child), class: 'child-btn view-btn' %>
        <%= link_to '編集', edit_child_path(child), class: 'child-btn edit-btn' %>
        <%= link_to '削除', child_path(child),
            data: { turbo_method: :delete, turbo_confirm: 'この子供を削除すると、関連するデータは全て削除され、復元できません。本当に削除してよろしいですか？' },
            class: 'child-btn delete-btn' %>
      </div>
    </div>
  <% end %>
</div>

<div class="new-child-area">
  <%= link_to '＋ 新規作成', new_child_path, class: 'new-child-btn' %>
</div>