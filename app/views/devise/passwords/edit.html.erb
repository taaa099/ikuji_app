<div class="password-reset-wrapper">
  <div class="password-reset-container">
    <h2 class="form-title">パスワードの再設定</h2>

    <p class="form-description">
      新しいパスワードを入力してください。
    </p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="form-actions">
        <%= f.submit "パスワードを変更", class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>