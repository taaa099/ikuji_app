<tr class="clickable-row" data-href="<%= edit_child_diaper_path(current_child, diaper) %>" data-turbo-frame="modal">
  <td class="col-date">
    <span class="font-semibold text-gray-600">時間：</span>
    <%= diaper.changed_at.strftime("%H:%M") %>
  </td>

  <td class="col-item1">
    <span class="font-semibold text-gray-600">種類：</span>
    <% contents = [] %>
    <% contents << "おしっこ" if diaper.pee %>
    <% contents << "うんち" if diaper.poop %>
    <%= contents.join(" + ") %>
  </td>
  
  <td class="col-memo">
    <% if diaper.memo.present? %>
      <span class="font-semibold text-gray-600">メモ：</span>
      <%= diaper.memo %>
    <% end %>
  </td>

  <td class="col-item2">
  </td>

  <td class="record-col-chevron text-right pr-2">
    <div class="record-edit-btn">
      <i class="fa-solid fa-chevron-right"></i>
    </div>
  </td>
</tr>