<turbo-frame id="modal">
  <div class="modal-background">
    <div class="modal-container">
      <h2 class="form-title">
        <%= diaper.persisted? ? "編集" : "新規作成" %> おむつ記録
      </h2>

      <%= render "form", diaper: diaper %>

      <div class="form-actions">
        <% if diaper.persisted? %>
          <%= button_to "削除", child_diaper_path(current_child, diaper), method: :delete, data: { turbo_confirm: '本当に削除しますか？' } %>
        <% end %>
        <a href="#" class="modal-close">閉じる</a>
      </div>
    </div>
  </div>
</turbo-frame>