<div class="diary-form-container">
  <%= form_with(model: diary, data: { turbo_frame: "modal" }) do |f| %>

    <div class="form-group">
      <%= f.label :title, class: "form-label" do %>
        タイトル
        <span class="required-badge">必須</span>
      <% end %>
      <%= f.text_field :title, class: "form-input #{'input-error' if diary.errors[:title].any?}" %>
      <% if diary.errors[:title].any? %>
        <div class="error-message"><%= diary.errors.full_messages_for(:title).join(", ") %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :content, class: "form-label" do %>
        本文
        <span class="required-badge">必須</span>
      <% end %>
      <%= f.text_area :content, rows: 13, class: "form-input #{'input-error' if diary.errors[:content].any?}" %>
      <% if diary.errors[:content].any? %>
        <div class="error-message"><%= diary.errors.full_messages_for(:content).join(", ") %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :date, class: "form-label" do %>
        日付
        <span class="required-badge">必須</span>
      <% end %>
      <%= f.date_field :date, class: "form-input #{'input-error' if diary.errors[:date].any?}" %>
      <% if diary.errors[:date].any? %>
        <div class="error-message"><%= diary.errors.full_messages_for(:date).join(", ") %></div>
      <% end %>
    </div>
    
    <!-- 現在掲載中のメディア一覧＋プレビューエリア -->
    <div class="form-group">
      <label class="form-label">現在掲載中のメディア</label>
      <div id="current-media-container" data-preview-target="container" class="current-media-list">
        <% if diary.persisted? && diary.media.attached? %>
          <% diary.media.each do |file| %>
            <div class="media-item" data-preloaded data-url="<%= url_for(file) %>" data-type="<%= file.content_type %>">
              <% if file.image? %>
                <%= image_tag file.variant(resize_to_limit: [120, 120]) rescue image_tag(file, width: 120) %>
              <% elsif file.video? %>
                <video src="<%= url_for(file) %>" width="120" controls></video>
              <% end %>
              <label class="remove-media-label">
                <%= check_box_tag "diary[remove_media_ids][]", file.id, false, class: "remove-checkbox" %> 削除する
              </label>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :media, "メディアを追加（画像・動画）", class: "form-label" %>
      <%= f.file_field :media, multiple: true, accept: "image/*,video/*",
            class: "form-input",
            data: { controller: "preview", action: "change->preview#show", preview_target: "input" } %>
    </div>

    <div class="form-actions">
      <%= f.submit diary.persisted? ? "更新する" : "登録する", class: "form-submit-btn" %>
      <a href="#" class="modal-close">閉じる</a>
    </div>
  <% end %>
</div>