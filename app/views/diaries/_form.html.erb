<div class="diary-form-container">
  <%= form_with(model: diary, data: { turbo_frame: "modal" }) do |f| %>
    <% if diary.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(diary.errors.count, "件のエラー") %>があります：</h3>
        <ul>
          <% diary.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, class: "form-label" do %>
        タイトル
        <span class="required-badge">必須</span>
      <% end %>
      <%= f.text_field :title, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :content, class: "form-label" do %>
        本文
        <span class="required-badge">必須</span>
      <% end %>
      <%= f.text_area :content, rows: 13, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :date, class: "form-label" do %>
        日付
        <span class="required-badge">必須</span>
      <% end %>
      <%= f.date_field :date, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :media, "メディア（画像・動画）", class: "form-label" %>
      <%= f.file_field :media, multiple: true, accept: "image/*,video/*", class: "form-input" %>
    </div>

    <div class="form-actions">    
      <%= f.submit diary.persisted? ? "更新する" : "保存", class: "form-submit-btn" %>
      <a href="#" class="modal-close">閉じる</a>
    </div>
  <% end %>
</div>