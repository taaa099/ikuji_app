<% wday = ["日", "月", "火", "水", "木", "金", "土"][date.wday] %>

<div id="feeds-date-<%= date.strftime('%Y%m%d') %>" class="date-section">
  <h3 class="date-heading">
    <%= date.strftime("%Y年%m月%d日（#{wday}）") %> の記録
  </h3>

  <%= render partial: "feeds/feeds_table_or_empty", locals: { feeds: feeds_by_date.sort_by(&:fed_at).reverse } %>
</div>