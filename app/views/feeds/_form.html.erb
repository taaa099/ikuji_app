<%= form_with(model: [current_child, feed], local: true, data: {turbo: false}) do |form| %>
  <% if feed.errors.any? %>
    <div class="error_explanation">
      <ul>
        <% feed.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :fed_at, "授乳日時" %>
    <%= form.text_field :fed_at %>
  </div>

  <div>
    <%= form.label :left_minutes, "左授乳（分）" %>
    <%= number_field_tag :left_minutes, @left_minutes || "", min: 0 %> 分

    <%= form.label :left_seconds, "左授乳（秒）" %>
    <%= number_field_tag :left_seconds, @left_seconds || "", min: 0 %> 秒
  </div>

  <div>
    <%= form.label :right_minutes, "右授乳（分）" %>
    <%= number_field_tag :right_minutes, @right_minutes || "", min: 0 %> 分

    <%= form.label :right_seconds, "右授乳（秒）" %>
    <%= number_field_tag :right_seconds, @right_seconds || "", min: 0 %> 秒
  </div>

  <div>
    <%= form.label :memo, "メモ" %>
    <%= form.text_field :memo %>
  </div>

  <%= form.submit feed.persisted? ? "更新する" : "登録する" %>
<% end %>