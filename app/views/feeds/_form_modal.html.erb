<turbo-frame id="modal">
  <div class="modal-background">
    <div class="modal-container">
      <h2 class="responsive-title">
        <%= feed.persisted? ? "編集" : "新規作成" %> 授乳記録
      </h2>

      <%= render "form", feed: feed %>

      <div class="form-actions">
        <% if feed.persisted? %>
          <%= button_to "削除", child_feed_path(current_child, feed), method: :delete, data: { turbo_confirm: '本当に削除しますか？' } %>
        <% end %>
        <a href="#" class="modal-close">閉じる</a>
      </div>
    </div>
  </div>
</turbo-frame>