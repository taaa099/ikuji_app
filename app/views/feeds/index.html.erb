<h2><%= current_child.name %> の授乳記録一覧</h2>

<table>
  <thead>
    <tr>
      <th>授乳日時</th>
      <th>左</th>
      <th>右</th>
      <th>メモ</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.fed_at.in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td>
         <% if feed.left_time.present? %>
          <%= feed.left_time / 60 %>分 <%= feed.left_time % 60 %>秒
         <% else %>
          -
         <% end %>
        </td>
        <td>
         <% if feed.right_time.present? %>
          <%= feed.right_time / 60 %>分 <%= feed.right_time % 60 %>秒
         <% else %>
          -
         <% end %>
        </td>
        <td><%= feed.memo %></td>
        <td><%= link_to "編集", edit_child_feed_path(current_child, feed) %></td>
      </tr>
    <% end %>
  </tbody>
</table>