<div class="growth-form-container">
  <%= form_with(model: [current_child, growth], data: { turbo_frame: "modal" }) do |form| %>
    <% if growth.errors.any? %>
      <div class="error_explanation">
        <h3><%= pluralize(growth.errors.count, "件のエラー") %>があります：</h3>
        <ul>
          <% growth.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="growth-form-group">
      <%= form.label :recorded_at, class: "growth-form-label" do %>
        計測日
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.date_field :recorded_at, class: "growth-form-input" %>
    </div>

    <div class="growth-form-group">
      <%= form.label :height, class: "growth-form-label" do %>
        身長(cm)
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.number_field :height, min: 0, step: 0.1, class: "growth-form-input" %>
    </div>

    <div class="growth-form-group">
      <%= form.label :weight, class: "growth-form-label" do %>
        体重(kg)
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.number_field :weight, min: 0, step: 0.1, class: "growth-form-input" %>
    </div>

    <div class="growth-form-group">
      <%= form.label :head_circumference, "頭囲(cm)", class: "growth-form-label" %>
      <%= form.number_field :head_circumference, min: 0, step: 0.1, class: "growth-form-input" %>
    </div>

    <div class="growth-form-group">
      <%= form.label :chest_circumference, "胸囲(cm)", class: "growth-form-label" %>
      <%= form.number_field :chest_circumference, min: 0, step: 0.1, class: "growth-form-input" %>
    </div>

    <div class="growth-form-actions">
      <%= form.submit growth.persisted? ? "更新する" : "登録する" %>
    </div>
  <% end %>
</div>