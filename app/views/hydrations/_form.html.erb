<div class="form-container">
  <%= form_with(model: [current_child, hydration], data: { turbo_frame: "modal" }) do |form| %>
    <div class="form-group">
      <%= form.label :fed_at, class: "form-label" do %>
        水分補給日時
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.datetime_field :fed_at, include_seconds: false, default: hydration.fed_at || Time.current, class: "form-input #{'input-error' if hydration.errors[:fed_at].any?}" %>
      <% if hydration.errors[:fed_at].any? %>
        <div class="error-message">
          <%= hydration.errors.full_messages_for(:fed_at).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :drink_type, class: "form-label" do %>
        種類
        <span class="required-badge">該当するものを選択</span>
      <% end %>
      <%= form.select :drink_type, options_for_select(["お水", "お茶", "その他"], hydration.drink_type), {}, class: "form-input #{'input-error' if hydration.errors[:drink_type].any?}" %>
      <% if hydration.errors[:drink_type].any? %>
        <div class="error-message">
          <%= hydration.errors.full_messages_for(:drink_type).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :amount, "量(ml)", class: "form-label" %>
      <%= form.number_field :amount, min: 0, step: 10, class: "form-input #{'input-error' if hydration.errors[:amount].any?}" %>
      <% if hydration.errors[:amount].any? %>
        <div class="error-message">
          <%= hydration.errors.full_messages_for(:amount).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :memo, "メモ", class: "form-label" %>
      <%= form.text_area :memo, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= form.submit hydration.persisted? ? "更新する" : "登録する" %>
    </div>
  <% end %>
</div>