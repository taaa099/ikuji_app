<turbo-frame id="modal">
  <div class="modal-background">
    <div class="modal-container">
      <h2 class="responsive-title">
        <%= hydration.persisted? ? "編集" : "新規作成" %> 水分補給記録
      </h2>

      <%= render "form", hydration: hydration %>

      <div class="form-actions">
        <% if hydration.persisted? %>
          <%= button_to "削除", child_hydration_path(current_child, hydration), method: :delete, data: { turbo_confirm: '本当に削除しますか？' } %>
        <% end %>
        <a href="#" class="modal-close">閉じる</a>
      </div>
    </div>
  </div>
</turbo-frame>