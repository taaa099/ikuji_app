<table class="responsive-table">
  <thead>
    <tr>
      <th class="col-date">時間</th>
      <th class="col-item1">内容</th>
      <th class="col-item2">量（ml）</th>
      <th class="col-memo">メモ</th>
      <th class="record-col-chevron"></th>
    </tr>
  </thead>

  <tbody>
    <% if hydrations.any? %>
      <%= render partial: "hydrations/hydration_row", collection: hydrations, as: :hydration %>
    <% else %>
      <tr>
        <td colspan="5" class="no-record text-center py-6">
          記録がありません。
        </td>
      </tr>
    <% end %>
  </tbody>
</table>