          <%= link_to child_vaccinations_path(current_child), class: "flex items-center gap-2", data: { tooltip: "予防接種一覧" } do %>
            <i class="fa-solid fa-syringe text-gray-600 text-xl"></i>
            <span>予防接種一覧</span>
          <% end %>
        </li>
