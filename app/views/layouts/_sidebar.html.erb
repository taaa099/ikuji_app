<div class="sidebar">
  <ul>
    <li class="tooltip">
      <%= link_to root_path, class: "flex items-center gap-2" do %>
        <i class="fa-solid fa-chess-board text-gray-600 text-xl"></i>
        <span>ダッシュボード</span>
        <span class="tooltip-text">ダッシュボード</span>
      <% end %>
    </li>

    <li class="tooltip">
      <%= link_to children_path, class: "flex items-center gap-2" do %>
