<%= form_with(model: [current_child, schedule], local: true, data: {turbo: false}) do |form| %>
  <% if @schedule.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@schedule.errors.count, "件のエラー") %>があります:</h2>
      <ul>
        <% @schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "タイトル", class: "form-label" %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time, "開始日時", class: "form-label" %>
    <%= form.datetime_field :start_time, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :end_time, "終了日時", class: "form-label" %>
    <%= form.datetime_field :end_time, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :all_day, "終日", class: "form-label" %>
    <%= form.check_box :all_day %>
  </div>

  <div class="form-group">
    <%= form.label :repeat, "繰り返し", class: "form-label" %>
    <%= form.select :repeat,
        options_for_select(["none", "daily", "weekly", "monthly", "yearly"], @schedule.repeat),
        {}, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :memo, "メモ", class: "form-label" %>
    <%= form.text_area :memo, rows: 3, class: "form-input" %>
  </div>

  <div class="form-actions">
    <%= form.submit schedule.persisted? ? "更新する" : "登録する" %>
  </div>
<% end %>