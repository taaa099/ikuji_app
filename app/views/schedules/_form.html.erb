<%= form_with(model: [current_child, schedule], local: true, data: {turbo: false}) do |form| %>
  <% if @schedule.errors.any? %>
    <div class="schedule-error-messages">
      <h2><%= pluralize(@schedule.errors.count, "件のエラー") %>があります:</h2>
      <ul>
        <% @schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="schedule-form-container">
    <div class="schedule-form-group">
      <%= form.label :title, "タイトル", class: "schedule-form-label" %>
      <%= form.text_field :title, class: "schedule-form-input" %>
    </div>

    <div class="schedule-form-group">
      <%= form.label :start_time, "開始日時", class: "schedule-form-label" %>
      <%= form.datetime_field :start_time, class: "schedule-form-input" %>
    </div>

    <div class="schedule-form-group">
      <%= form.label :end_time, "終了日時", class: "schedule-form-label" %>
      <%= form.datetime_field :end_time, class: "schedule-form-input" %>
    </div>

    <div class="schedule-form-group">
      <%= form.label :all_day, "終日", class: "schedule-form-label" %>
      <%= form.check_box :all_day, class: "schedule-form-checkbox" %>
    </div>

    <div class="schedule-form-group">
      <%= form.label :repeat, "繰り返し", class: "schedule-form-label" %>
      <%= form.select :repeat,
          options_for_select(["none", "daily", "weekly", "monthly", "yearly"], @schedule.repeat),
          {}, class: "schedule-form-input" %>
    </div>

    <div class="schedule-form-group">
      <%= form.label :memo, "メモ", class: "schedule-form-label" %>
      <%= form.text_area :memo, rows: 3, class: "schedule-form-input" %>
    </div>

    <div class="schedule-form-actions">
      <%= form.submit schedule.persisted? ? "更新する" : "登録する", class: "schedule-form-submit" %>
    </div>
  </div>
<% end %>