<div id="schedules-container">
  <% if schedule_all_dates.any? %>
    <% schedule_all_dates.each do |date| %>
      <% schedules_by_date = grouped_schedules[date] || [] %>
      <%= render partial: "schedules/date_section", locals: { date: date, schedules_by_date: schedules_by_date } %>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <%= image_tag "animal/yukianimal.jpg", alt: "雪国動物たちのイラスト", class: "animal-image" %>
      <p class="text-gray-500 mb-4 text-lg">予定を入れてみましょう！</p>
      <%= link_to "新規追加", new_schedule_path, data: { turbo_frame: "modal" }, class: "schedule-create-btn" %>
    </div>
  <% end %>
</div>