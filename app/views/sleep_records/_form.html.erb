<div class="form-container">
  <%= form_with(model: [current_child, sleep_record], data: { turbo_frame: "modal" }) do |form| %>
    <div class="form-group">
      <%= form.label :start_time, class: "form-label" do %>
        開始時間
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.datetime_field :start_time, include_seconds: false, default: sleep_record.start_time || Time.current, class: "form-input #{'input-error' if sleep_record.errors[:start_time].any?}" %>
      <% if sleep_record.errors[:start_time].any? %>
        <div class="error-message">
          <%= sleep_record.errors.full_messages_for(:start_time).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :end_time, "終了時間", class: "form-label" %>
      <%= form.datetime_field :end_time, include_seconds: false, default: sleep_record.end_time || Time.current, class: "form-input #{'input-error' if sleep_record.errors[:end_time].any?}" %>
      <% if sleep_record.errors[:end_time].any? %>
        <div class="error-message">
          <%= sleep_record.errors.full_messages_for(:end_time).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :memo, "メモ", class: "form-label" %>
      <%= form.text_area :memo, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= form.submit sleep_record.persisted? ? "更新する" : "登録する" %>
    </div>
  <% end %>
</div>