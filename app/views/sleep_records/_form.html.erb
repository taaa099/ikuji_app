<%= form_with(model: [current_child, sleep_record], local: true, data: {turbo: false}) do |form| %>
  <% if sleep_record.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(sleep_record.errors.count, "件のエラー") %>があります：</h3>
      <ul>
        <% sleep_record.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_time, "開始時間" %><br>
    <%= form.datetime_field :start_time, include_seconds: false, default: sleep_record.start_time || Time.current %>
  </div>

  <div class="field">
    <%= form.label :end_time, "終了時間" %><br>
    <%= form.datetime_field :end_time, include_seconds: false, default: sleep_record.end_time || Time.current %>
  </div>

  <div class="field">
    <%= form.label :memo, "メモ" %><br>
    <%= form.text_area :memo %>
  </div>

  <div class="actions">
    <%= form.submit sleep_record.persisted? ? "更新する" : "登録する" %>
  </div>
<% end %>