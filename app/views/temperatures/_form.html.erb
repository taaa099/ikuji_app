<div class="form-container">
  <%= form_with(model: [current_child, temperature], data: { turbo_frame: "modal" }) do |form| %>
    <div class="form-group">
      <%= form.label :measured_at, class: "form-label" do %>
        測定時間
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.datetime_field :measured_at, include_seconds: false, default: temperature.measured_at || Time.current, class: "form-input #{'input-error' if temperature.errors[:measured_at].any?}" %>
      <% if temperature.errors[:measured_at].any? %>
        <div class="error-message">
          <%= temperature.errors.full_messages_for(:measured_at).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :temperature, class: "form-label" do %>
        体温(℃)
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.number_field :temperature, step: 0.1, min: 35.0, max: 42.0, class: "form-input #{'input-error' if temperature.errors[:temperature].any?}" %>
      <% if temperature.errors[:temperature].any? %>
        <div class="error-message">
          <%= temperature.errors.full_messages_for(:temperature).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :memo, "メモ", class: "form-label" %>
      <%= form.text_area :memo, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= form.submit temperature.persisted? ? "更新する" : "登録する" %>
    </div>
  <% end %>
</div>