<turbo-frame id="modal">
  <div class="modal-background">
    <div class="modal-container">
      <h2 class="form-title">
        <%= temperature.persisted? ? "編集" : "新規作成" %> 体温記録
      </h2>

      <%= render "form", temperature: temperature %>

      <div class="form-actions">
        <% if temperature.persisted? %>
          <%= button_to "削除", child_temperature_path(current_child, temperature),
                method: :delete,
                data: { turbo_confirm: '本当に削除しますか？' } %>
        <% end %>
        <a href="#" class="modal-close">閉じる</a>
      </div>
    </div>
  </div>
</turbo-frame>