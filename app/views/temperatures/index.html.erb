<%= render "shared/filters", url: child_temperatures_path(current_child) %>

<h2 class="responsive-title"><%= current_child.name %> の体温記録一覧</h2>

<table class="responsive-table">
  <thead>
    <tr>
      <th class="col-date">測定日時</th>
      <th class="col-item">体温 (℃)</th>
      <th class="col-memo">メモ</th>
      <th class="col-detail">操作</th>
    </tr>
  </thead>
  <tbody id="temperatures-list">
    <%= render partial: "temperatures/temperature_row", collection: @temperatures, as: :temperature %>
  </tbody>
</table>

<%= link_to "新規追加", new_child_temperature_path(current_child), class: "index-btn", data: { turbo_frame: "modal" } %>

<!-- モーダル枠 -->
<turbo-frame id="modal"></turbo-frame>