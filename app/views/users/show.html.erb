<h2 class="profile-title"><%= @user.name %>さんのプロフィール</h2>

<div class="profile-show-container">
  <% if @user.avatar.attached? %>
    <div class="profile-show-avatar">
      <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]) %>
    </div>
  <% else %>
    <p class="profile-show-item">アバターは未設定です</p>
  <% end %>

  <p class="profile-show-item">
    <strong class="profile-show-label">名前:</strong> <%= @user.name %>
  </p>
</div>