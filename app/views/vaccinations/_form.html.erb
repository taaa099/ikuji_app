<div class="form-container">
  <%= form_with(model: [current_child, vaccination], data: { turbo_frame: "modal" }) do |form| %>
    <div class="form-group">
      <%= form.label :vaccinated_at, class: "form-label" do %>
        接種時間
        <span class="required-badge">必須</span>
      <% end %>
      <%= form.datetime_field :vaccinated_at, include_seconds: false, default: vaccination.vaccinated_at || Time.current, class: "form-input #{'input-error' if vaccination.errors[:vaccinated_at].any?}" %>
      <% if vaccination.errors[:vaccinated_at].any? %>
        <div class="error-message">
          <%= vaccination.errors.full_messages_for(:vaccinated_at).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :vaccine_name, class: "form-label" do %>
        種類
        <span class="required-badge">該当するものを選択</span>
      <% end %>
      <%= form.select :vaccine_name, options_for_select(["B型肝炎", "ロタウイルス", "ヒブ", "肺炎球菌", "四種混合", "BCG", "MR", "水痘", "日本脳炎", "二種混合", "インフルエンザ", "おたふくかぜ", "その他"], form.object.vaccine_name), {}, class: "form-input #{'input-error' if vaccination.errors[:vaccine_name].any?}" %>
      <% if vaccination.errors[:vaccine_name].any? %>
        <div class="error-message">
          <%= vaccination.errors.full_messages_for(:vaccine_name).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :memo, "メモ", class: "form-label" %>
      <%= form.text_area :memo, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= form.submit vaccination.persisted? ? "更新する" : "登録する" %>
    </div>
  <% end %>
</div>