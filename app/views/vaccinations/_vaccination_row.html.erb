<tr class="clickable-row" data-href="<%= edit_child_vaccination_path(current_child, vaccination) %>" data-turbo-frame="modal">
  <td class="col-date">
    <span class="font-semibold text-gray-600">時間：</span>
    <%= vaccination.vaccinated_at.strftime("%H:%M") %>
  </td>

  <td class="col-item1">
    <span class="font-semibold text-gray-600">種類：</span>
    <%= vaccination.vaccine_name %>
    </td>

  <td class="col-memo">
    <% if vaccination.memo.present? %>
      <span class="font-semibold text-gray-600">メモ：</span>
      <%= vaccination.memo %>
    <% end %>
  </td>

  <td class="col-item2">
  </td>

  <td class="record-col-chevron text-right pr-2">
    <div class="record-edit-btn">
      <i class="fa-solid fa-chevron-right"></i>
    <div>
  </td>
</tr>